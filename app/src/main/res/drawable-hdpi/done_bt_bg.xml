<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle"
        >
            <solid
                android:color="@color/db_press"/>

            <corners
                android:radius="8dp"
            />



        </shape>
    </item>



    <item>
        <shape
        >
            <solid
                android:color="@color/db_normal"/>

            <corners
                android:radius="8dp"
            />




        </shape>
    </item>
</selector>

